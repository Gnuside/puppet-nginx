server {
  listen  80;
  server_name <%= @vhost_domain %> <% if @vhost_alias %> <%= @vhost_alias %> <% end %>;

  access_log  /var/log/nginx/<%= @vhost_domain %>-access.log;

  root  <%= @vhost_root %>;
  index index.php index.html index.htm;
  autoindex on;

  <% while ! @includes.empty? do %>
  include   <% @includes.pop() %> ;
  <% end %>
}
